<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editinformation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredient">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="Overview"
        app:titleTextColor="@color/cardview_light_background"
        android:background="@drawable/gredient"/>
        <TextView
        android:id="@+id/Leavetransaction"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="85dp"
        android:text="Transaction No#: "
        android:layout_marginStart="10dp"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/OvEditTextLeaveTransaction"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/LeaveEmployeeID"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/Leavetransaction"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="37dp"
        android:text="Employee ID: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/OvEditTextEmployeeID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/OvEditTextLeaveTransaction"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/LeaveType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LeaveEmployeeID"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="45dp"
        android:text="Leave Type: "
        android:textSize="17dp" />

    <TextView
        android:id="@+id/Ovspinnerofleave"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/LeaveEmployeeID"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="35dp"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/DayofLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LeaveType"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="27dp"
        android:text="Days of Leave: "
        android:textSize="17dp" />


    <TextView
        android:id="@+id/Ovspinnerofdays"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/DayofLeave"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-37dp"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DayofLeave"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:text="Please Select a Date of your Leave"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/OvStartdate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Start"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/OvEnddate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/OvStartdate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/OvLeaveBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvEnddate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/buttoncorners"
        android:text="Back" />

    <Button
        android:id="@+id/OvSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvEnddate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="265dp"
        android:background="@drawable/buttoncorners"
        android:text="Submit" />

</RelativeLayout>