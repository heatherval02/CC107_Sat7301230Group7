<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editinformation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredient">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="Overview"
        app:titleTextColor="@color/cardview_light_background"
        android:background="@drawable/gredient"/>
    <TextView
        android:id="@+id/OvTransaction"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="85dp"
        android:text="Transaction No#: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/OvTransdate"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/OvTransaction"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="49dp"
        android:text="Transaction Date: "
        android:textSize="17dp" />

    <TextView
        android:id="@+id/LoanEmployeeID"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/OvTransdate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="43dp"
        android:text="Employee ID: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/LoanType"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/LoanEmployeeID"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="41dp"
        android:text="Loan Type: "
        android:textSize="17dp" />

    <TextView
        android:id="@+id/OvSpinnerofLoanType"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoanEmployeeID"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="41dp"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/LoanAmount"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/LoanType"
        android:layout_centerVertical="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:text="Loan Amount: "
        android:textSize="17dp" />

    <TextView
        android:id="@+id/OvSpinnerofLoanAmount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvSpinnerofLoanType"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="44dp"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/LoanNoMonths"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/LoanAmount"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:text="No. of Months: "
        android:textSize="17dp" />

    <TextView
        android:id="@+id/spinnerofLoanMonths"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvSpinnerofLoanAmount"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="40dp"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/PayAmount"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/LoanNoMonths"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="56dp"
        android:text="Pay Amount: "
        android:textSize="17dp" />

    <TextView
        android:id="@+id/Interest"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/PayAmount"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="45dp"
        android:text="Interest: "
        android:textSize="17dp" />

    <TextView
        android:id="@+id/Every"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/Interest"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="24dp"
        android:text="Every: "
        android:textSize="17dp" />

    <TextView
        android:id="@+id/OvSpinnerEvery"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Interest"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="47dp"
        android:textSize="17dp" />

    <Button
        android:id="@+id/OvLoanBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvSpinnerEvery"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/buttoncorners"
        android:text="Back" />

    <Button
        android:id="@+id/OvLoanSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvSpinnerEvery"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="229dp"
        android:background="@drawable/buttoncorners"
        android:text="Submit" />

    <TextView
        android:id="@+id/OvEditTextTransactionNo"
        android:layout_width="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="150dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/editTextEmployeeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvEditTextTransactionDate"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="89dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/OvEditTextTransactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvEditTextTransactionNo"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/OvEditTextPayAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerofLoanMonths"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="85dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/OvEditTextInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvEditTextPayAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="17dp" />

</RelativeLayout>