<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aboutus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredient">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="Payslip"
        app:titleTextColor="@color/cardview_light_background"
        android:background="@drawable/gredient"/>
    <TextView
        android:id="@+id/maternityloan"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:text="Maternity Loan :"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/EditmatennityLoan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="73dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/cashAdvance"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/maternityloan"
        android:layout_marginStart="10dp"
        android:layout_marginTop="26dp"
        android:text="Cash Advance :"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/Editcashadvance"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:inputType="numberSigned" />
    <TextView
        android:id="@+id/EmergencyFund"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/cashAdvance"
        android:layout_marginStart="10dp"
        android:layout_marginTop="26dp"
        android:text="Emergency Fund :"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/EdtEmergencyfunds"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="177dp"
        android:ems="10"
        android:inputType="numberSigned" />


    <TextView
        android:id="@+id/TotalDeduc"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/EmergencyFund"
        android:layout_marginStart="10dp"
        android:layout_marginTop="26dp"
        android:text="TOTAL DEDUCTION :"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/EditDeduc"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="226dp"
        android:ems="10"
        android:inputType="numberSigned" />
    <TextView
        android:id="@+id/Netpay"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/TotalDeduc"
        android:layout_marginStart="10dp"
        android:layout_marginTop="26dp"
        android:text="NETPAY :"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editnetpay"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="279dp"
        android:ems="10"
        android:inputType="numberSigned" />
    <Button
        android:id="@+id/payslipNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editnetpay"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="154dp"
        android:background="@drawable/buttoncorners"
        android:text="Back to Home" />
    <Button
        android:id="@+id/Requestbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payslipNext"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="154dp"
        android:background="@drawable/buttoncorners"
        android:text="Request" />

</RelativeLayout>