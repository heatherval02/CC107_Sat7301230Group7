<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editinformation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredient">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="Edit my Information"
        app:titleTextColor="@color/cardview_light_background"
        android:background="@drawable/gredient"/>

    <TextView
        android:id="@+id/NameInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="85dp"
        android:text="Name: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editNmeInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="85dp"
        android:ems="10" />

    <TextView
        android:id="@+id/IDnumInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/NameInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:text="Employee ID No#: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editIdnumInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/editNmeInfo"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/AgeInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/IDnumInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:text="Age: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editAgeInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/editNmeInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:inputType="numberSigned" />
    <TextView
        android:id="@+id/BdayInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/AgeInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:text="Birthdate : "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/Birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AgeInfo"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:text="Enter Your Birthday"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Addressinfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/BdayInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:text="Address: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editAddressInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/editNmeInfo"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="182dp"
        android:ems="10"
         />
    <TextView
        android:id="@+id/CompanyNameInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/Addressinfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:text="Company Name: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editCompanyNameInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/editNmeInfo"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="253dp"
        android:ems="10" />
    <Button
        android:id="@+id/SaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CompanyNameInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@drawable/buttoncorners"
        android:text="Save" />

</RelativeLayout>