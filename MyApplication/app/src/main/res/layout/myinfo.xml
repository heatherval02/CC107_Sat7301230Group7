<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aboutus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredient">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="My Information"
        app:titleTextColor="@color/cardview_light_background"
        android:background="@drawable/gredient"/>
        <TextView
        android:id="@+id/NameInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="85dp"
        android:text="Name: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp"
            />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="85dp"
        android:editable="false"
        android:ems="10" />

    <TextView
        android:id="@+id/IDnumInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/NameInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:text="Employee ID No#: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/myEmpId"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/myname"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:editable="false"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/AgeInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/IDnumInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:text="Age: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/myAge"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/myEmpId"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="21dp"
        android:editable="false"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/BdayInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/AgeInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:text="Birthdate : "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/myBdate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/myAge"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:editable="false"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/Addressinfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/BdayInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:text="Address: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/myAddress"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/myBdate"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="44dp"
        android:editable="false"
        android:ems="10" />

    <TextView
        android:id="@+id/CompanyNameInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/Addressinfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="156dp"
        android:text="Company Name: "
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/myCompanyname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/myAddress"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="37dp"
        android:ems="10" />



</RelativeLayout>