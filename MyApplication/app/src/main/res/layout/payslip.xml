<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aboutus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredient">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="Payslip"
        app:titleTextColor="@color/cardview_light_background"
        android:background="@drawable/gredient"/>
    <TextView
        android:id="@+id/empname"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:text="Name: "
        android:textColorHint="@color/black"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="72dp"
        android:ems="10"
         />

    <TextView
        android:id="@+id/RegAmount"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/empname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:text="Regular Amount: "
        android:textColorHint="@color/black"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editReg"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/editname"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="125dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/Overtime"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/RegAmount"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:text="Overtime: "
        android:textColorHint="@color/black"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />


    <EditText
        android:id="@+id/editOvertime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="172dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/Grosspay"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/Overtime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:text="Gross Pay: "
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/EditGpay"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="217dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/Deduction"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/Grosspay"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Deductions :"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />
    <TextView
        android:id="@+id/sss"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/Deduction"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:text="SSS : "
        android:textColorHint="@color/black"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editSSS"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="306dp"
        android:ems="10"
        android:inputType="numberSigned" />
    <TextView
        android:id="@+id/PHILHEALTH"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/sss"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:text="PHILHEALTH : "
        android:textColorHint="@color/black"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editPHILH"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="352dp"
        android:ems="10"
        android:inputType="numberSigned" />
    <TextView
        android:id="@+id/sssloan"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/PHILHEALTH"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:text="SSS Loan : "
        android:textColorHint="@color/black"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/EditSSSLoan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="402dp"
        android:ems="10"
        android:inputType="numberSigned" />
    <TextView
        android:id="@+id/CalamityLoan"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/sssloan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:text="Calamity Loan : "
        android:textColorHint="@color/black"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/EditCalamityLoan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="452dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/SalaryLoan"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/CalamityLoan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:text="Salary Loan : "
        android:textColorHint="@color/black"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/EditSalaryLoan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="494dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/payslipNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SalaryLoan"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="154dp"
        android:background="@drawable/buttoncorners"
        android:text="Next" />


</RelativeLayout>